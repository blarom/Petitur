<?xml version="1.0" encoding="UTF-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/dialog_sort"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="?dialogPreferredPadding"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dialog_sort_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/sort"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dialog_sort_list"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_sort_title"
        />

    <ToggleButton
        android:id="@+id/dialog_sort_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:textOn="@string/ascending"
        android:textOff="@string/descending"
        app:layout_constraintTop_toBottomOf="@id/dialog_sort_list"/>

</android.support.constraint.ConstraintLayout>