<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleStyle">
        <item name="android:layout_marginLeft">@dimen/standard_margin</item>
        <item name="android:layout_marginTop">@dimen/double_margin</item>
        <item name="android:layout_marginRight">@dimen/standard_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="ProfileSubtitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/standard_margin</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">@dimen/large_list_text_size</item>
    </style>

    <style name="ProfileListSubtitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/standard_margin</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">@dimen/large_list_text_size</item>
    </style>

    <style name="ListCheckBoxCheckableStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/double_margin</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">@dimen/list_text_size</item>
    </style>

    <style name="ListCheckBoxNonCheckableStyle" parent="@style/ListCheckBoxCheckableStyle">
        <item name="android:clickable">false</item>
    </style>

    <style name="GridCheckBoxCheckableStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">@dimen/list_text_size</item>
    </style>

    <style name="GridCheckBoxNonCheckableStyle" parent="@style/GridCheckBoxCheckableStyle">
        <item name="android:clickable">false</item>
    </style>

    <style name="ProfileValueStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/standard_margin</item>
        <item name="android:layout_marginRight">@dimen/standard_margin</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">@dimen/large_list_text_size</item>
    </style>

    <style name="ImagesRecyclerViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MainImageStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="MainImageStyleLandscape">
        <item name="android:layout_width">@dimen/main_image_landscape_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="SpinnerTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/standard_margin</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">@dimen/spinner_text_size</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/standard_margin</item>
        <item name="android:layout_marginRight">@dimen/standard_margin</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">@dimen/spinner_text_size</item>
    </style>

    <style name="PreferencesValueStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/standard_margin</item>
        <item name="android:layout_marginRight">@dimen/standard_margin</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">@dimen/large_list_text_size</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextInputEditTextParametersStyle">
        <item name="android:maxLength">@integer/max_input_text_length</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="DefaultFabStyle">
        <item name="android:layout_width">@dimen/fab_button_size</item>
        <item name="android:layout_height">@dimen/fab_button_size</item>
        <item name="android:layout_margin">@dimen/fab_button_standard_margin</item>
    </style>

    <style name="FilterSubtitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="FilterButtonsContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
    </style>

    <style name="FilterButtonStyle">
        <item name="android:background">@drawable/selector_filter_toggle_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LoveButtonStyle">
        <item name="android:background">@drawable/selector_love_toggle_button</item>
        <item name="android:layout_width">@dimen/pet_list_item_love_image_size</item>
        <item name="android:layout_height">@dimen/pet_list_item_love_image_size</item>
        <item name="android:layout_marginEnd">@dimen/standard_margin</item>
        <item name="android:layout_marginRight">@dimen/standard_margin</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:contentDescription">@string/favorite_state</item>
    </style>

    <style name="FilterSeparatorStyle">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="FilterGridCheckBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TipsContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tips_card_height</item>
        <item name="android:layout_marginStart">@dimen/double_margin</item>
        <item name="android:layout_marginLeft">@dimen/double_margin</item>
        <item name="android:layout_marginEnd">@dimen/double_margin</item>
        <item name="android:layout_marginRight">@dimen/double_margin</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TipsTextContainerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="TipsCardTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TipsCardSubTitleStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">10sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TipsCardImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/greenBackground</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="riv_corner_radius">20dp</item>
        <item name="riv_mutate_background">true</item>
    </style>

</resources>
